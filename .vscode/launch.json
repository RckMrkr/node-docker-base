{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Docker",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "start", "--inspect" ],
      // "preLaunchTask": "echo",
      "port": 9229,
      "restart": true,
      "smartStep": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}